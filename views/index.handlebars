<h1>EAT DA BURGERS</h1>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <h3>NOT EATEN</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm">
            <h2>ADD A BURGER</h2>
        </div>
        <div class="col-sm">
            <h3>DEVOURED</h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>